    <title>
        <%- title %> -Damandeep Singh</title>
    </head>

    <body>
        <div class="wrapper d-flex align-items-stretch">
            <%- include('partials/page_header'); %>

            <div id="content" class="p-4 p-md-5" >
                <h4 class='text-info'>Business Contact List:</h4>
                <a href="/users/createcontact" onclick="if (!confirm('Are you sure Create?')) { return false }" class="btn btn-danger btn-sm" type="button">Create Contact</a>
                <hr class="thumbnail">
               <div class="row">
                <table class="table table-hover">

                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Mobile Number</th>
                            <th scope="col">Email Address</th>
                            <th scope="col">Edit/Delete</th>
                        </tr>
                    </thead>
    
                    <tbody class="gfg">
                        <% if(datacontact.length)
                        {
                        for(var i=0;i < datacontact.length;i++){ %>
                        
                        <tr>
                            
                            <th scope="row"><%= i+1 %></th>
                            <td><%= datacontact[i].Name %></td>
                            <td><%= datacontact[i].Contactno %></td>
                            <td><%= datacontact[i].EmailAddress %></td>
                            <td>
                                <div class="d-grid gap-2 d-md-block">
                                    <a href="/users/update/<%= datacontact[i]._id %>" onclick="if (!confirm('Are you sure Update?')) { return false }" class="btn btn-primary btn-sm" type="button">Update</a>
                                    <a href="/users/delete/<%= datacontact[i]._id %>" onclick="if (!confirm('Are you sure Delete?')) { return false }" class="btn btn-danger btn-sm" type="button">Delete</a>
                                </div>
                            </td>
                        </tr>
                        <% } }else
                        
                        {
                            %>
                            <tr>
                            <td colspan="5">&nbsp;</td></tr>
                            <%
                        }; %>
    
                    </tbody>
    
                </table>
                        
                    </div>

                </div>
               </div>
                    
            </div>
                    </div>
      
      <script src="/js/bootstrap.js"></script>
      </body>
      </html>
      
      
        


               